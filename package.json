{
  "name": "azure-pipeline-runner",
  "displayName": "Azure Pipelines Runner",
  "description": "Run, monitor, and explore Azure DevOps pipelines directly in VS Code",
  "author": {
    "name": "Pedro Caetano",
    "email": "pedrohenriquedecaldascaetano@gmail.com"
  },
  "publisher": "PedroCaetano",
  "icon": "resources/icon.png",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://github.com/pedroccaetano/azure-pipeline-runner#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/pedroccaetano/azure-pipeline-runner.git"
  },
  "bugs": {
    "url": "https://github.com/pedroccaetano/azure-pipeline-runner/issues"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Azure",
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "azure devops",
    "pipelines",
    "ci cd",
    "builds",
    "devops",
    "azure pipelines"
  ],
  "activationEvents": [
    "onView:azurePipelinesRunner.azurePipelineView",
    "onCommand:azurePipelinesRunner.showWelcome"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "azurePipelinesRunner",
          "title": "Azure Pipelines Runner",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "azurePipelinesRunner": [
        {
          "id": "azurePipelineAccounts",
          "name": "Accounts"
        },
        {
          "id": "azurePipelineView",
          "name": "Pipelines",
          "when": "true"
        },
        {
          "id": "azurePipelineBuilds",
          "name": "Builds"
        },
        {
          "id": "azurePipelineStages",
          "name": "Stages"
        }
      ]
    },
    "commands": [
      {
        "command": "azurePipelinesRunner.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "azurePipelinesRunner.refreshBuilds",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "azurePipelinesRunner.refreshStages",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "azurePipelinesRunner.openPipeline",
        "title": "Open Pipeline",
        "icon": "$(link-external)"
      },
      {
        "command": "azurePipelinesRunner.openBuild",
        "title": "Open Build",
        "icon": "$(link-external)"
      },
      {
        "command": "azurePipelinesRunner.openStage",
        "title": "Open Stage",
        "icon": "$(link-external)"
      },
      {
        "command": "azurePipelinesRunner.retryStage",
        "title": "Retry Stage",
        "icon": "$(redo)"
      },
      {
        "command": "azurePipelinesRunner.loadMoreBuilds",
        "title": "Load More Builds",
        "icon": "$(add)"
      },
      {
        "command": "azurePipelinesRunner.runPipelineFromBranch",
        "title": "Run Pipeline from Branch",
        "icon": "$(play)"
      },
      {
        "command": "azurePipelinesRunner.retriggerBuild",
        "title": "Retrigger Build",
        "icon": "$(redo)"
      },
      {
        "command": "azurePipelinesRunner.viewPinnedBuild",
        "title": "Retained - Right-click the build number to the left to release retention leases",
        "icon": "$(pinned)"
      },
      {
        "command": "azurePipelinesRunner.deleteBuild",
        "title": "Delete Build",
        "icon": "$(trash)"
      },
      {
        "command": "azurePipelinesRunner.cancelBuild",
        "title": "Cancel Build",
        "icon": "$(stop-circle)"
      },
      {
        "command": "azurePipelinesRunner.retainBuildIndefinitely",
        "title": "Retain Indefinitely",
        "icon": "$(lock)"
      },
      {
        "command": "azurePipelinesRunner.removeRetention",
        "title": "Remove Retention",
        "icon": "$(unlock)"
      },
      {
        "command": "azurePipelinesRunner.addAccount",
        "title": "Add Account",
        "icon": "$(add)"
      },
      {
        "command": "azurePipelinesRunner.switchAccount",
        "title": "Switch Account"
      },
      {
        "command": "azurePipelinesRunner.editAccountNote",
        "title": "Edit Note",
        "icon": "$(edit)"
      },
      {
        "command": "azurePipelinesRunner.deleteAccount",
        "title": "Delete Account",
        "icon": "$(trash)"
      },
      {
        "command": "azurePipelinesRunner.refreshAccounts",
        "title": "Refresh Accounts",
        "icon": "$(refresh)"
      },
      {
        "command": "azurePipelinesRunner.toggleLogViewer",
        "title": "Log Viewer Settings",
        "icon": "$(gear)"
      },
      {
        "command": "azurePipelinesRunner.togglePolling",
        "title": "Toggle Azure Pipelines Polling"
      },
      {
        "command": "azurePipelinesRunner.filterPipelines",
        "title": "Filter Pipelines by Project",
        "icon": "$(filter)"
      },
      {
        "command": "azurePipelinesRunner.filterPipelinesActive",
        "title": "Filter Pipelines by Project",
        "icon": "$(filter-filled)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "azurePipelinesRunner.addAccount",
          "when": "view == azurePipelineAccounts",
          "group": "navigation@1"
        },
        {
          "command": "azurePipelinesRunner.refreshAccounts",
          "when": "view == azurePipelineAccounts",
          "group": "navigation@2"
        },
        {
          "command": "azurePipelinesRunner.filterPipelines",
          "when": "view == azurePipelineView && !azurePipelinesRunner.pipelinesFiltered",
          "group": "navigation@1"
        },
        {
          "command": "azurePipelinesRunner.filterPipelinesActive",
          "when": "view == azurePipelineView && azurePipelinesRunner.pipelinesFiltered",
          "group": "navigation@1"
        },
        {
          "command": "azurePipelinesRunner.refreshEntry",
          "when": "view == azurePipelineView",
          "group": "navigation@2"
        },
        {
          "command": "azurePipelinesRunner.refreshBuilds",
          "when": "view == azurePipelineBuilds",
          "group": "navigation@2"
        },
        {
          "command": "azurePipelinesRunner.refreshStages",
          "when": "view == azurePipelineStages",
          "group": "navigation@0"
        },
        {
          "command": "azurePipelinesRunner.toggleLogViewer",
          "when": "view == azurePipelineStages",
          "group": "navigation@2"
        },
        {
          "command": "azurePipelinesRunner.runPipelineFromBranch",
          "when": "view == azurePipelineBuilds",
          "group": "navigation@1"
        },
        {
          "command": "azurePipelinesRunner.loadMoreBuilds",
          "when": "view == azurePipelineBuilds",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "azurePipelinesRunner.editAccountNote",
          "when": "viewItem == account || viewItem == account-active",
          "group": "inline@1"
        },
        {
          "command": "azurePipelinesRunner.deleteAccount",
          "when": "viewItem == account || viewItem == account-active",
          "group": "inline@2"
        },
        {
          "command": "azurePipelinesRunner.openPipeline",
          "when": "viewItem == pipeline",
          "group": "inline"
        },
        {
          "command": "azurePipelinesRunner.retriggerBuild",
          "when": "viewItem == build || viewItem == build-pinned",
          "group": "inline@2"
        },
        {
          "command": "azurePipelinesRunner.viewPinnedBuild",
          "when": "viewItem == build-pinned",
          "group": "inline@1"
        },
        {
          "command": "azurePipelinesRunner.openBuild",
          "when": "viewItem == build || viewItem == build-pinned",
          "group": "1_open@1"
        },
        {
          "command": "azurePipelinesRunner.cancelBuild",
          "when": "viewItem == build || viewItem == build-pinned",
          "group": "2_actions@1"
        },
        {
          "command": "azurePipelinesRunner.retainBuildIndefinitely",
          "when": "viewItem == build",
          "group": "2_actions@2"
        },
        {
          "command": "azurePipelinesRunner.removeRetention",
          "when": "viewItem == build-pinned",
          "group": "2_actions@2"
        },
        {
          "command": "azurePipelinesRunner.deleteBuild",
          "when": "viewItem == build || viewItem == build-pinned",
          "group": "3_danger@1"
        },
        {
          "command": "azurePipelinesRunner.retryStage",
          "when": "viewItem == stage",
          "group": "inline@1"
        },
        {
          "command": "azurePipelinesRunner.openStage",
          "when": "viewItem == stage",
          "group": "inline@2"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "azurePipelineAccounts",
        "contents": "No Azure DevOps accounts connected yet.\n\nConnect your Azure DevOps organization to browse pipelines, builds, and stages directly from VS Code.\n\nGet started:\n\n[Add your first account](command:azurePipelinesRunner.addAccount)\n\n---\n\nRequired PAT scopes:\n\n• Build — Read & Execute\n• Code — Read\n• Release — Read, Write, Execute & Manage\n\n[Learn more](https://github.com/pedroccaetano/azure-pipeline-runner)\n"
      },
      {
        "view": "azurePipelineView",
        "contents": "No pipelines available.\n\nConnect an account or select a different Azure DevOps project."
      },
      {
        "view": "azurePipelineBuilds",
        "contents": "No builds to display.\n\nSelect a pipeline from the Pipelines view above to see its builds."
      },
      {
        "view": "azurePipelineStages",
        "contents": "No stages to display.\n\nSelect a build from the Builds view above to view its stages."
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Azure Pipelines Runner",
      "properties": {
        "azurePipelinesRunner.logViewer": {
          "type": "string",
          "enum": [
            "outputChannel",
            "file"
          ],
          "enumDescriptions": [
            "Open logs in the Output Channel panel",
            "Save logs to a temporary file and open in editor"
          ],
          "default": "outputChannel",
          "description": "Choose how to view stage logs"
        },
        "azurePipelinesRunner.enablePolling": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic polling to refresh builds and stages when they are in progress"
        },
        "azurePipelinesRunner.pollingIntervalSeconds": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Polling interval in seconds for refreshing builds and stages (1-60 seconds)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "js-yaml": "^4.1.1"
  }
}
